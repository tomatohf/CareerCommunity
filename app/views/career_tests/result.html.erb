<% owner_name = "我" %>
<% test_name = @test.name %>

<% page_title = "#{owner_name} 的职业测评结果" %>
<% community_page_title(page_title) %>

<div class="float_r community_container_r">
	
	<div class="community_block align_c">
		<a href="/career_tests">
			返回职业测评列表</a>
	</div>
	
	<div class="community_block align_c">
		<a href="#" style="font-size: 13px;">
			<%= owner_name %> 的全部测试结果列表</a>
	</div>
	
	<div class="community_block align_c">
		<a href="#">
			<%= owner_name %> 的全部 <%= test_name %> 结果</a>
	</div>
	
	
	<div class="community_block_narrow">
		<%= thin_hr %>
	</div>
	
	
	<% if @test.side_template && @test.side_template != "" %>
		<div>
			<%= render(:partial => @test.side_template, :locals => {:info => @result_info}) %>
		</div>
	<% end %>
	
</div>

<div class="community_container_l">
	<h2><%= page_title %></h2>
	
	
	
	<div class="community_block_narrow" style="font-size: 14px; border-bottom: 1px dashed #EAEAEA;">
		<div class="community_block">
			<span class="activity_info_label">测试名称:</span>
			&nbsp;
			<a href="/career_tests/show/<%= @result.career_test_id %>">
				<%= test_name %></a>
		</div>
		
		<div class="community_block">
			<span class="activity_info_label">提交时间:</span>
			&nbsp;
			<%= format_datetime(@result.created_at) %>
		</div>
	</div>
	
	
	<% if @test.result_template && @test.result_template != "" %>
		<div class="test_result_container">
			<%= render(:partial => @test.result_template, :locals => {:info => @result_info}) %>
		</div>
	<% end %>
	
</div>

