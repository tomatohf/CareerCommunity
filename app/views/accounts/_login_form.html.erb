<% email ||= "" %>
<% once &&= true %>
<% simple &&= true %>
<% input_size ||= 20 %>

<div class="login_form">
	<% form_tag "/accounts/login", :method => "post" do %>
		
		<div>
			<label for="email">
                你的 email 地址
            </label>
		</div>
		<div>
			<input type="text" id="email" name="email" class="text_field" size="<%= input_size %>" value="<%= email %>" />
		</div>
		
		<div>
			<label for="password">
                你的密码
            </label>
		</div>
		<div>
			<input type="password" id="password" name="password" class="text_field" size="<%= input_size %>" />
		</div>
		
		<div>
			<%= check_box_tag :autologin, value = "true", !once %>
            <label for="autologin">
                记住我
            </label>
		</div>

		<div>
	        <%= submit_tag "登录", :class => "button" %>
			&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
			<% unless simple %>
				<span class="form_info_s">(或者 从注册验证邮件登录)</span>
			<% else %>
				(<a href="/accounts/forgot_password">忘记密码了</a>)
			<% end %>
	    </div>
	<% end %>
</div>