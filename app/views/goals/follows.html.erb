<% goal_name = h(@goal.name) %>

<% page_title = "#{@follow_status[1]} 目标 #{goal_name} 的成员" %>
<% community_page_title(page_title) %>

<div class="float_r community_container_r">
	
	<div class="community_block align_c">
		<a href="/goals/<%= @goal.id %>">
			返回目标 <%= goal_name %></a>
	</div>
	
	<div class="community_block_narrow">
		<%= thin_hr %>
	</div>
	
	
	<% unless @follow_status[0] == GoalFollowStatus.active[0] %>
		<div class="community_block align_c">
			<a href="/goals/active/<%= @goal.id %>">
				查看全部
				<b>正在做</b>
				这件事的成员</a>
		</div>
	<% end %>
	
	<% unless @follow_status[0] == GoalFollowStatus.finished[0] %>
		<div class="community_block align_c">
			<a href="/goals/finished/<%= @goal.id %>">
				查看全部
				<b>已完成</b>
				这件事的成员</a>
		</div>
	<% end %>
	
	<% unless @follow_status[0] == GoalFollowStatus.cancelled[0] %>
		<div class="community_block align_c">
			<a href="/goals/cancelled/<%= @goal.id %>">
				查看全部
				<b>已终止</b>
				这件事的成员</a>
		</div>
	<% end %>
	
</div>

<div class="community_container_l">
	<h2><%= page_title %></h2>
	
	<div class="community_block_narrow form_info_s">
		共有
		<b>
			<%= @follows.total_entries %>
		</b>
		个成员
		<b>
			<%= @follow_status[1] %>
		</b>
		这件事
	</div>

	<div class="overflow_hidden">
		<%= float_list(@follows, "follow", :follow, {}, 5) %>
		
		<div class="clear_l"></div>
	</div>
	
	<div class="community_block">
		<%= paging_buttons(@follows) %>
	</div>
	
</div>