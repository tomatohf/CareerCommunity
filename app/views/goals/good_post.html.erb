<% goal_name = h(@goal.name) %>

<% page_title = "目标 #{goal_name} 的精华区" %>
<% community_page_title(page_title) %>

<div class="float_r blog_container_r">
	<div class="community_title">
		目标 ...
	</div>

	<div class="community_block">
		<a href="/goals/<%= @goal.id %>">返回目标 <%= goal_name %></a>
	</div>
	
	<div class="community_block">
		<a href="/goals/post/<%= @goal.id %>">
			全部目标讨论话题</a>
	</div>
	
</div>

<div class="blog_container_l">
	<h2><%= page_title %></h2>
	
	
	<div class="community_block_narrow form_info_s">
		精华区内共有
		<b><%= @goal_posts.total_entries + @top_goal_posts.size %></b>
		个讨论话题
	</div>

	<% if @top_goal_posts.size > 0 %>
		<div class="community_title">
			精华区置顶的话题 ...
		</div>
	
		<div class="community_block">
			<table cellpadding="0" cellspacing="5" class="main_part_w">
				<thead>
					<tr>
						<td width="52%">话题</td>
						<td width="6%" align="right">评论</td>
						<td width="19%" align="right">发起人</td>
						<td width="23%" align="right">最后参与</td>
					</tr>
				</thead>
				<tbody>
					<%= render :partial => "goal_post", :collection => @top_goal_posts %>
				</tbody>
			</table>
		</div>
	<% end %>

	<div class="community_title">
		精华区所有话题 ...
	</div>

	<div class="community_block">
		<table cellpadding="0" cellspacing="5" class="main_part_w">
			<thead>
				<tr>
					<td width="52%">话题</td>
					<td width="6%" align="right">评论</td>
					<td width="19%" align="right">发起人</td>
					<td width="23%" align="right">最后参与</td>
				</tr>
			</thead>
			<tbody>
				<%= render :partial => "goal_post", :collection => @goal_posts %>
			</tbody>
		</table>
	</div>

	<div class="community_block">
		<%= paging_buttons(@goal_posts) %>
	</div>
</div>

