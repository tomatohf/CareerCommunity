<% community_page_title("修改目标") %>

<div class="blog_container">
	<h2>修改目标</h2>
	
	<div class="community_block">
		<%= unchecked_alert(@account_checked) %>
	</div>
	
	<br />
	
	<div class="community_block_narrow">

		<% if flash[:message] %>
			<p class="info_msg"><%= flash[:message] %></p>
		<% end %>
		<% if flash[:error_msg] %>
			<p class="error_msg"><%= flash[:error_msg] %></p>
		<% end %>
		<% if @goal.errors.size > 0 %>
			<p class="error_msg">
				<%= list_model_validate_errors(@goal) %>
			</p>
		<% end %>
		
		<div class="div_form">
			<% form_tag "/goals/#{@goal.id}", :method => :put do %>
			
				<div>
					<label for="goal_name">
				        名称(<span style="color: red;">*</span>)
				    </label>
				</div>
				<div>
					<input type="text" id="goal_name" name="goal_name" class="text_field" size="75" value="<%= h(@goal.name) %>" />
				</div>
				
				<br />
				
				<div>
					<%= submit_tag "保存目标", :class => "button", :disabled => @account_limited %>
					&nbsp;&nbsp;&nbsp;
					<a href="/goals/<%= @goal.id %>">返回这个目标</a>
				</div>
			
			<% end %>
		</div>
		
	</div>
</div>


