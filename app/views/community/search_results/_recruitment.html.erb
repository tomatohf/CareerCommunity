<% recruitment = result %>

<%
	excerpts = build_excerpts(
		riddle_client,
		[h(recruitment.title), sanitize_tinymce(extract_text(recruitment.content)), h(recruitment.location), h(recruitment.recruitment_type), recruitment.recruitment_tags.collect { |tag| h(tag.name) }.join(" - ")],
		query,
		"recruitment_core"
	)
%>

<%
	recruitment_title = excerpts[0]
	recruitment_content = excerpts[1]
	recruitment_location = excerpts[2]
	recruitment_type = excerpts[3]
	recruitment_tag_names = excerpts[4]
%>

<div class="recruitment_container">
	<div class="recruitment_title">
		<% if recruitment.recruitment_type && recruitment.recruitment_type != "" %>
			[<a href="/recruitments/recruitment_type?name=<%= h(recruitment.recruitment_type) %>" class="account_nick_link"><%= recruitment_type %></a>]
		<% end %>
		<% if recruitment.location && recruitment.location != "" %>
			[<a href="/recruitments/location?name=<%= h(recruitment.location) %>" class="account_nick_link"><%= recruitment_location %></a>]
		<% end %>
		<a href="<%= recruitment.source_link %>" target="_blank" class="account_nick_link">
			<%= recruitment_title %></a>
	</div>
	
	<div class="align_r">
		<span class="form_info_s">
			发布时间:
		</span>
		<span class="recruitment_info_highlight">
			<b>
				<%= format_date(recruitment.publish_time) %>
			</b>
		</span>
		&nbsp;
		|
		&nbsp;
		<a href="/recruitments/<%= recruitment.id %>">信息快照</a>
	</div>
	
	<div class="recruitment_content">
		<%= recruitment_content %>
	</div>
	
	<div class="recruitment_tags">
		标签:
		<%= recruitment_tag_names %>
	</div>
</div>


