<% comment_count = GroupPostComment.get_count(group_post.id) %>

<div class="community_index_post">
	<div>
		<a href="/group/posts/<%= group_post.id %>" class="account_nick_link">
			<%= h(group_post.title) %></a>
			
		&nbsp;&nbsp;
		
		<span class="form_info_s">
			来自:
			<% account = group_post.account %>
			<a href="/spaces/show/<%= account.id%>" class="account_nick_link">
				<%= h(account.get_nick) %></a>
			
			|
			
			<a href="/group/posts/<%= group_post.id %>#comment_list" class="account_nick_link">
				回帖(<%= comment_count %>)</a>

			|

			<%= format_date(group_post.created_at) %>
		</span>
	</div>
	
	<%= draw_hor_line("400px", "1px", "#DDDDDD") %>
</div>

