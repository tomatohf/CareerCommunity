<%
	page_title = "修改客户资料"
	community_page_title(page_title)
%>

<div class="job_item_container">
	<a class="float_r" href="/intranet/employees/<%= @employee[:account_id] %>/sales_contacts/<%= @contact.id %>">
		返回客户</a>
	<h2><%= page_title %></h2>
	
	
	<div class="community_block_narrow">

		<% if flash[:error_msg] %>
			<p class="error_msg"><%= flash[:error_msg] %></p>
		<% end %>
		<% if @contact.errors.size > 0 %>
			<p class="error_msg">
				<%= list_model_validate_errors(@contact) %>
			</p>
		<% end %>

		<% form_tag "/intranet/employees/#{@employee[:account_id]}/sales_contacts/#{@contact.id}", :method => :put do %>
			<%= render :partial => "contact_form", :locals => {:submit_label => "修改"} %>
		<% end %>
		
	</div>
	
</div>
