<table border="0" cellspacing="5" cellpadding="5">
	<tr>
		<td style="width: 120px;">
			<label for="occur_at">
				时间(<span style="color: red;">*</span>)
			</label>
		</td>

		<td>
			<% occur_at = @record.occur_at || DateTime.now %>
			<input type="text" name="occur_at" id="occur_at" class="text_field" size="20" value="<%= format_datetime(occur_at) %>" />
		</td>
	</tr>
	
	<tr>
		<td valign="top">
			<label for="notes">
				内容(<span style="color: red;">*</span>)
			</label>
		</td>
		
		<td>
			<textarea id="notes" name="notes" class="text_field" cols="50" rows="8"><%= h(@record.notes) %></textarea>
		</td>
	</tr>
	
	
	<tr>
		<td></td>
		<td>
			<div class="form_info_l">
				1000 字以内
			</div>
		</td>
	</tr>
	

	<tr>
		<td>

		</td>

		<td>
			<%= submit_tag submit_label, :class => "button", :disabled => @account_limited %>
		</td>
	</tr>
</table>
