<% community_page_title("发送消息") %>

<div class="float_r friend_container_r">
	
	<div class="community_block">
		<a href="/messages">返回 我的消息</a>
	</div>

</div>

<div class="friend_container_l">
	<h2>发送消息</h2>
	
	<div class="community_block">
		<% form_tag "/messages", :method => :post, :onsubmit => "if(document.getElementById('message_content').value.replace(/(^\s*)|(\s*$)/g, '') == ''){ alert('请填写消息内容 ...'); return false; }" do %>
			<table cellpadding="0" cellspacing="10" class="main_part_w">
				<tr>
					<td style="width: 10%" valign="top">
						发送给:
					</td>
					
					<td style="width: 90%" align="left">
						<a href="/spaces/show/<%= @account_id %>" class="account_nick_link">
							<%= h(@account_nick_pic[0]) %></a>
					</td>
				</tr>
				
				<tr>
					<td></td>
					<td>
						<a href="/spaces/show/<%= @account_id %>">
							<img src="<%= face_img_src(@account_nick_pic[1]) %>" border="0" /></a>
					</td>
				</tr>
				
				<tr>
					<td valign="top">
						<label for="message_content">
							消息内容:
						</label>
					</td>
					
					<td align="left">
						<textarea id="message_content" name="message_content" class="text_field" cols="50" rows="6"></textarea>
					</td>
				</tr>
				<tr>
					<td></td>
					<td><div class="form_info_l">1000 字以内</div></td>
				</tr>
				
				<tr>
					<td></td>
					<td>
						<input type="hidden" name="to" value="<%= @account_id %>" />
						<input type="submit" value="发送消息" class="button" />
					</td>
				</tr>
			</table>
		<% end %>
	</div>
	
</div>

