<table cellpadding="0" cellspacing="5" class="main_part_w">
	<tr>
		<td style="width: 50px">
			<a href="/activities/<%= activity_id %>">
				<img src="<%= face_img_src(activity_image) %>" border="0" /></a>
		</td>
		
		<td>
			<% form_tag "/activities/#{activity_id}/check_profile", :method => :post do %>

				<a href="/spaces/show/<%= inviter_id %>" class="account_nick_link">
					<%= h(inviter_nick) %></a>
				邀请你
				<input type="submit" value="参加活动" class="button" />
				<a href="/activities/<%= activity_id %>"><%= h(activity_title) %></a>
				<% if invitation_words && (invitation_words != "") %>
					:
					&nbsp;
					<img src="/images/left_quote.gif" border="0" />
					<%= h(invitation_words) %>
					<img src="/images/right_quote.gif" border="0" />
				<% end %>

			<% end %>
		</td>
		
		<td style="width: 50px">
			<a href="/spaces/show/<%= inviter_id %>">
				<img src="<%= face_img_src(inviter_pic_url) %>" border="0" /></a>
		</td>
	</tr>
</table>

