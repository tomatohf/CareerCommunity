<table cellpadding="0" cellspacing="5" class="main_part_w">
	<tr>
		<td style="width: 50px">
			<a href="/groups/<%= group_id %>" target="_blank">
				<img src="<%= face_img_src(group_image) %>" border="0" /></a>
		</td>
		
		<td>
			<div>
				<a href="/spaces/show/<%= admin_id %>" class="account_nick_link" target="_blank">
					<%= h(admin_nick) %></a>
				<b><%= approve ? "批准" : "拒绝" %></b>
				了你加入圈子
				<a href="/groups/<%= group_id %>" target="_blank"><%= h(group_name) %></a>
				的申请
			</div>
			
			<% unless approve %>
				<div>
					<% if message && message != "" %>
						附加消息:
						&nbsp;
						<img src="/images/left_quote.gif" border="0" />
						<%= h(message) %>
						<img src="/images/right_quote.gif" border="0" />
					<% else %>
						无附加消息 ...
					<% end %>
				</div>
			<% end %>
		</td>
		
		<td style="width: 50px">
			<a href="/spaces/show/<%= admin_id %>" target="_blank">
				<img src="<%= face_img_src(admin_pic_url) %>" border="0" /></a>
		</td>
	</tr>
</table>

