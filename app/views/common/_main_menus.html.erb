<% selected_index ||= 0 %>

<div id="main_menus_container">
	<table cellpadding="0" cellspacing="0" border="0">
		<tr>
			<td align="left" valign="top" style="width: 150px; height: 65px;" class="main_menus_underline">
				<a href="http://www.qiaobutang.com/index">
					<img src="/images/real_index/qiaobutang_logo.png" border ="0" alt="乔布堂" title="乔布堂" /></a>
			</td>
			
			<td align="left" valign="bottom" class="menu_bar main_menus_underline">
				<table cellpadding="0" cellspacing="0" border="0">
					<tr>

						<%
							menus = [
								["/index", "首页", false],
								["/methodology", "乔布哲学", false],
								# ["/coach", "乔布教练", false],
								# ["/seekjob", "死磕乔布", false],
								["http://cv.qiaobutang.com", "乔布简历", true],
								["/talks", "周三访谈录", true],
								["/community", "乔布圈", true]
							]
						%>
						<% menus.each_index do |i| %>
							<% menu = menus[i] %>
							<td class="gap"></td>
							<td>
								<a href="<%= menu[0] %>"
									<% if i == selected_index %>
									class="menu_selected"
									<% else %>
									onmouseover="this.className='menu_selected'"
									onmouseout="this.className=''"
									<% end %>
									<% if menu[2] %>
									target="_blank"
									<% end %>
									>
									<%= menu[1] %></a>
							</td>
						<% end %>

					</tr>
				</table>
			</td>
			
			<td style="width: 30px;" class="main_menus_underline">
				&nbsp;
			</td>
			
			<td align="left" valign="bottom">
				<div class="index_button_container">
					<table cellpadding="0" cellspacing="0" border="0">
						<tr>
							<td>
								<a href="/coach/stp">
									<img src="/images/real_index/training_button.png" border="0" alt="我要培训" title="我要培训" /></a>
							</td>
							
							<td>
								<a href="/community" target="_blank">
									<img src="/images/real_index/qiaobuquan_button.png" border="0" alt="乔布圈" title="乔布圈" /></a>
							</td>
						</tr>
					</table>
				</div>
				
				<div style="height: 30px;">
					<table cellpadding="0" cellspacing="0" border="0">
						<tr>
							<td align="left" valign="bottom" style="width: 27px;">
								<img src="/images/real_index/curve.png" border="0" />
							</td>

							<td align="left" valign="bottom" class="service_container">
								<table cellpadding="0" cellspacing="0" border="0">
									<tr>
										<td>
											<a href="/info/student">
												学生服务</a>
										</td>
										
										<td>
											<a href="/info/company">
												企业服务</a>
										</td>
										
										<td>
											<a href="/info/school">
												学校服务</a>
										</td>
									</tr>
								</table>
							</td>
						</tr>
					</table>
				</div>
			</td>
		</tr>
	</table>
</div>