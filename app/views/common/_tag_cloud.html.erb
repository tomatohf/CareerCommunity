<div class="tag_cloud">
	<% if tags.size > 0 %>

		<% min_tag_count = tags[0].count.to_i %>
		<% max_tag_count = min_tag_count %>
		
		<% tags.each do |t| %>
			<% t_count = t.count.to_i %>
			<% min_tag_count = t_count if min_tag_count > t_count %>
			<% max_tag_count = t_count if max_tag_count < t_count %>
		<% end %>

		<% tags.each do |tag| %>
			<% tag_text = "#{h(tag.name)} (#{tag.count.to_i})" %>
			<a title="<%= tag_text %>" style="<%= tag_cloud_font_styling(tag.count.to_i, min_tag_count, max_tag_count) %>" href="#">
				<%= tag_text %>
			</a>
			&nbsp;
		<% end %>
	
	<% else %>
	
		还没有任何标签
	
	<% end %>
</div>