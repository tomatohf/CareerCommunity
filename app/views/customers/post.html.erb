<% account_nick = h(@account_nick_pic[0]) %>

<% page_title = "#{account_nick} 的学员档案" %>
<% community_page_title(page_title) %>

<div class="float_r blog_container_r">
	
	<div class="community_block align_c">
		<a href="/spaces/show/<%= @account_id %>">
			<img src="<%= face_img_src(@account_nick_pic[1]) %>" border="0" /></a>
	</div>

	<div class="community_block align_c">
		<a href="/spaces/show/<%= @account_id %>" class="account_nick_link">
			<%= account_nick %></a>
	</div>
	
	<div class="community_block_narrow">
		<%= thin_hr %>
	</div>
	
	<div class="community_block align_c">
		<a href="/customer/posts/compose/<%= @account_id %>" style="font-size: 16px;">
			<img src="/images/groups/add_post_small.png" border="0" />
			发起新的讨论话题</a>
	</div>
	
	
	<% if @is_teacher %>
		<div class="community_block_narrow">
			<%= thin_hr %>
		</div>
		
		<div class="community_block align_c">
			<a href="/customers">
				全部学员档案的讨论话题</a>
		</div>
		
		<div class="community_block align_c">
			<a href="/customers/all">
				查看全部学员档案列表</a>
		</div>
	<% end %>

</div>

<div class="blog_container_l">
	<h2><%= page_title %></h2>
	
	
	<div class="community_block_narrow form_info_s">
		共有
		<b><%= @posts.total_entries + @top_posts.size %></b>
		个讨论话题
	</div>
	
	
	<% if @top_posts.size > 0 %>
		<div class="community_title">
			置顶的话题 ...
		</div>
	
		<div class="community_block">
			<table cellpadding="0" cellspacing="5" class="main_part_w">
				<thead>
					<tr>
						<td width="52%">话题</td>
						<td width="6%" align="right">回帖</td>
						<td width="19%" align="right">发起人</td>
						<td width="23%" align="right">最后参与</td>
					</tr>
				</thead>
				<tbody>
					<%= render :partial => "customer_post", :collection => @top_posts %>
				</tbody>
			</table>
		</div>
	<% end %>

	<div class="community_title">
		所有话题 ...
	</div>

	<div class="community_block">
		<table cellpadding="0" cellspacing="5" class="main_part_w">
			<thead>
				<tr>
					<td width="52%">话题</td>
					<td width="6%" align="right">回帖</td>
					<td width="19%" align="right">发起人</td>
					<td width="23%" align="right">最后参与</td>
				</tr>
			</thead>
			<tbody>
				<%= render :partial => "customer_post", :collection => @posts %>
			</tbody>
		</table>
	</div>

	<div class="community_block">
		<%= paging_buttons(@posts) %>
	</div>
	
</div>

