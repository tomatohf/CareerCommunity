<% community_page_title("全部圈子") %>

<div class="float_r friend_container_r">
	
	<div class="community_block">
		<a href="/groups/new">
			<img src="/images/groups/new_group_small.gif" border="0" />
			创建一个圈子</a>
	</div>
	
	<div class="community_block_narrow">
		<%= thin_hr %>
	</div>
	
	<div class="community_block">
		<a href="/groups/recent_index" style="font-size: 14px; font-weight: bold;">
			我的圈子近况</a>
	</div>
	
	<div class="community_block_narrow">
		<%= thin_hr %>
	</div>
	
	<div class="community_title">
		搜索圈子 ...
	</div>
	
	<% form_tag "/community/search", :method => :get do %>
		<div class="community_block align_c">
			<input type="text" name="query" class="text_field" style="width: 90%" />
			<input type="hidden" name="scope" value="group" />
		</div>
		
		<div class="community_block align_c">
			<input type="submit" value="搜索圈子" class="button" />
		</div>
	<% end %>
	
</div>

<div class="friend_container_l">
	<h2>全部圈子</h2>
	
	<div class="community_block_narrow form_info_s">
		共有
		<b><%= @groups.total_entries %></b>
		个圈子
	</div>
	
	<div class="community_block overflow_hidden">
		<%= float_list(@groups, "group_name_img", :group_name_img, {:show_icon => false}, 7) %>
	</div>
	
	<div class="community_block">
		<%= paging_buttons(@groups) %>
	</div>
	
</div>

