<% talker_name = h(@talker.get_name) %>

<% page_title = "受访人 #{talker_name} 的详细信息" %>
<% community_page_title(page_title) %>

<div class="talk_container">
	<h2><%= page_title %></h2>
	
	<% form_tag "/talks/#{@talker.id}/talker_destroy", :method => :post, :id => "delete_talker_form" do %>
	<% end %>
	
	<div class="community_block_narrow">
		<a href="/talks/<%= @talker.id %>/talker_edit">
			修改详细信息</a>
			
		&nbsp;&nbsp;&nbsp;&nbsp;
		
		<a href="#" onclick="if(confirm('确定要删除此受访人么 ?')) { document.getElementById('delete_talker_form').submit(); }; return false;">
			删除受访人</a>
	</div>
	
	<div class="community_block">

		<table cellpadding="0" cellspacing="10" class="main_part_w">
			<tr>
				<td style="width: 100px">
					<label for="talker_real_name">
				        真实姓名
						:
				    </label>
				</td>
				<td>
					<%= h(@talker.real_name) %>
				</td>
			</tr>
			
			<tr>
				<td>
					<label for="talker_gender">
		                性别
						:
		            </label>
				</td>
				<td>
					<%= @talker.gender ? "男-♂" : "女-♀" unless @talker.gender.nil? %>
				</td>
			</tr>
			
			<tr>
				<td>
					<label for="talker_age">
				        年龄
						:
				    </label>
				</td>
				<td>
					<%= h(@talker.age) %>
				</td>
			</tr>
			
			<tr>
				<td>
					<label for="talker_nick">
				        昵称
						:
				    </label>
				</td>
				<td>
					<%= h(@talker.nick) %>
				</td>
			</tr>
			
			<tr>
				<td>
					<label for="talker_company">
				        公司
						:
				    </label>
				</td>
				<td>
					<%= h(@talker.company) %>
				</td>
			</tr>
			
			<tr>
				<td>
					<label for="talker_position">
				        职位
						:
				    </label>
				</td>
				<td>
					<%= h(@talker.position) %>
				</td>
			</tr>
			
			<tr>
				<td>
					<label for="talker_email">
				        Email
						:
				    </label>
				</td>
				<td>
					<%= h(@talker.email) %>
				</td>
			</tr>
			
			<tr>
				<td>
					<label for="talker_mobile">
				        手机
						:
				    </label>
				</td>
				<td>
					<%= h(@talker.mobile) %>
				</td>
			</tr>
			
			<tr>
				<td>
					<label for="talker_phone">
				        电话
						:
				    </label>
				</td>
				<td>
					<%= h(@talker.phone) %>
				</td>
			</tr>
			
			<tr>
				<td>
					<label for="talker_msn">
				        MSN
						:
				    </label>
				</td>
				<td>
					<%= h(@talker.msn) %>
				</td>
			</tr>
			
			<tr>
				<td>
					<label for="talker_gtalk">
				        Gtalk
						:
				    </label>
				</td>
				<td>
					<%= h(@talker.gtalk) %>
				</td>
			</tr>
			
			<tr>
				<td>
					<label for="talker_qq">
				        QQ
						:
				    </label>
				</td>
				<td>
					<%= h(@talker.qq) %>
				</td>
			</tr>
			
			<tr>
				<td>
					<label for="talker_skype">
				        Skype
						:
				    </label>
				</td>
				<td>
					<%= h(@talker.skype) %>
				</td>
			</tr>
			
			<tr>
				<td>
					<label for="talker_experience">
				        经历和经验
						:
				    </label>
				</td>
				<td>
					<%= simple_format(h(@talker.experience)) %>
				</td>
			</tr>
			
			<tr>
				<td>
					<label for="talker_other">
				        其它
						:
				    </label>
				</td>
				<td>
					<%= simple_format(h(@talker.other)) %>
				</td>
			</tr>
			
			
			<tr>
				<td></td>
				<td>
					<a href="/talks">返回访谈录列表</a>
					&nbsp;&nbsp;&nbsp;
					<a href="/talks/talker_index">返回管理受访人</a>
				</td>
			</tr>
		</table>
		
	</div>
</div>


