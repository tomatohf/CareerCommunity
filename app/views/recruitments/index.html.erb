<% page_title = "最新招聘信息" %>
<% community_page_title(page_title) %>

<div class="float_r recruitment_container_r">
	
	<!--
	<div class="community_block align_c">
		<a href="/recruitments/new">
			+ 发布招聘信息
		</a>
	</div>
	-->
	
	<%= render(:partial => "catalog_filter") %>
	
	<div class="community_title">
		搜索招聘信息 ...
	</div>
	
	<div class="community_block">
		<% form_tag "/community/search", :method => :get do %>
			<input type="text" name="query" class="text_field" style="width: 50%" />
			<input type="hidden" name="scope" value="recruitment" />

			&nbsp;
			<input type="submit" value="死磕乔布(SeekJob)" class="button" />
		<% end %>
	</div>
	
	<div class="community_block">
		<table cellpadding="0" cellspacing="5">
			<tr>
				<td>
					<div>
						合作伙伴:
					</div>
					<div>
						<a href="http://yingjiesheng.com" target="_blank">
							<img src="/images/yingjiesheng_small.gif" border="0" /></a>
					</div>
				</td>
				
				<td>
					<form action="http://s.yingjiesheng.com/result.jsp" target="_blank">
						<div>
							<input type="text" name="keyword" class="text_field" />
							<input type="hidden" value="1" name="do" />
						</div>
						
						<div class="align_r" style="margin-top: 5px;">
							<input type="submit" value="搜索应届生" class="button" />
						</div>
					</form>
				</td>
			</tr>
		</table>
	</div>
	
	
	<div class="community_title">
		所有标签 ...
	</div>
	
	<div class="community_block">
		<%= render(:partial => "recruitment_tag_cloud") %>
	</div>
	
</div>

<div class="recruitment_container_l">
	<h2><%= page_title %></h2>
	
	<div class="community_block_narrow form_info_s">
		共有
		<b><%= @recruitments.total_entries %></b>
		条信息
	</div>
	
	<div class="community_block">
		<%= render(:partial => "recruitment", :collection => @recruitments) %>
	</div>
	
	<div class="community_block">
		<%= paging_buttons(@recruitments) %>
	</div>
	
</div>

