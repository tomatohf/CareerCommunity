<% page_title = "最新招聘信息" %>
<% community_page_title(page_title) %>

<div class="float_r recruitment_container_r">
	
	<!--
	<div class="community_block align_c">
		<a href="/recruitments/new">
			+ 发布招聘信息
		</a>
	</div>
	-->
	
	<div class="community_block">
		<% form_tag "/recruitments/recruitment_type", :method => :get do %>
			按现有类型查看:
			&nbsp;
			<select name="name" class="dropdown_list">
				<% @recruitment_types.each do |t| %>
					<% type_name = h(t) %>
					<option value="<%= type_name %>"><%= type_name %></option>
				<% end %>
			</select>
			&nbsp;
			<input type="submit" class="button" value="查看" />
		<% end %>
	</div>
	
	<div class="community_block">
		<% form_tag "/recruitments/location", :method => :get do %>
			按现有地区查看:
			&nbsp;
			<select name="name" class="dropdown_list">
				<% @recruitment_locations.each do |l| %>
					<% location_name = h(l) %>
					<option value="<%= location_name %>"><%= location_name %></option>
				<% end %>
			</select>
			&nbsp;
			<input type="submit" class="button" value="查看" />
		<% end %>
	</div>
	
	<div class="community_title">
		所有标签 ...
	</div>
	
	<div class="community_block">
		<%= render(:partial => "recruitment_tag_cloud") %>
	</div>
	
</div>

<div class="recruitment_container_l">
	<h2><%= page_title %></h2>
	
	<div class="community_block_narrow form_info_s">
		共有
		<b><%= @recruitments.total_entries %></b>
		条信息
	</div>
	
	<div class="community_block">
		<%= render(:partial => "recruitment", :collection => @recruitments) %>
	</div>
	
	<div class="community_block">
		<%= paging_buttons(@recruitments) %>
	</div>
	
</div>

