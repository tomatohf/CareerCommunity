<% content = extract_text(recruitment.content) %>
<% content = sanitize_tinymce(content) %>

<div class="recruitment_container">
	<div class="recruitment_title">
		<% if recruitment.recruitment_type && recruitment.recruitment_type != "" %>
			[<a href="/recruitments/recruitment_type?name=<%= h(recruitment.recruitment_type) %>" class="account_nick_link"><%= h(recruitment.recruitment_type) %></a>]
		<% end %>
		<% if recruitment.location && recruitment.location != "" %>
			[<a href="/recruitments/location?name=<%= h(recruitment.location) %>" class="account_nick_link"><%= h(recruitment.location) %></a>]
		<% end %>
		<a href="<%= recruitment.source_link %>" target="_blank" class="account_nick_link">
			<%= h(recruitment.title) %></a>
	</div>
	
	<div class="align_r">
		<span class="form_info_s">
			发布时间:
		</span>
		<span class="recruitment_info_highlight">
			<b>
				<%= format_date(recruitment.publish_time) %>
			</b>
		</span>
		&nbsp;
		|
		&nbsp;
		<a href="/recruitments/<%= recruitment.id %>">信息快照</a>
	</div>
	
	<div class="recruitment_content">
		<%= truncate(content, 75) %>
	</div>
	
	<% tags = recruitment.recruitment_tags %>
	<% if tags.size > 0 %>
		<div class="recruitment_tags form_info_s">
			标签:
			<% tags.each do |tag|%>
				<a href="/recruitments/tag?name=<%= h(tag.name) %>" class="account_nick_link"><%= h(tag.name) %></a>
			<% end %>
		</div>
	<% end %>
</div>


