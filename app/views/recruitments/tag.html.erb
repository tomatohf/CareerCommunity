<% page_title = "招聘信息标签: #{@tag_name}" %>
<% community_page_title(page_title) %>

<div class="float_r recruitment_container_r">
	
	<!--
	<div class="community_block align_c">
		<a href="/recruitments/new">
			+ 发布招聘信息
		</a>
	</div>
	-->
	
	<%= render(:partial => "catalog_filter") %>
	
	<div class="community_title">
		搜索招聘信息 ...
	</div>
	
	<div class="community_block">
		<% form_tag "/community/search", :method => :get do %>
			<input type="text", id="seekjob_query" name="query" class="text_field" style="width: 50%" />
			<input type="hidden" name="scope" value="recruitment" />

			&nbsp;&nbsp;&nbsp;
			<input type="submit" value="死磕 - Seek" class="button" />
		<% end %>
	</div>
	
	
	<div class="community_title">
		所有标签 ...
	</div>
	
	<div class="community_block">
		<%= render(:partial => "recruitment_tag_cloud") %>
	</div>
	
</div>

<div class="recruitment_container_l">
	<h2><%= page_title %></h2>
	
	<% if @new_record %>
	
		<div class="community_block">
			没有相关记录 ...
		</div>
	
	<% else %>
	
		<div class="community_block_narrow form_info_s">
			有
			<b><%= @recruitments.total_entries %></b>
			条信息
		</div>
	
		<div class="community_block">
			<%= render(:partial => "recruitment", :collection => @recruitments) %>
		</div>
	
		<div class="community_block">
			<%= paging_buttons(@recruitments) %>
		</div>
	
	<% end %>
	
</div>

