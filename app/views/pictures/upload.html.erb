<% type_name = h(@type_name) %>
<% pluralized_picture_type = @picture_type.pluralize %>

<% page_title = "上传#{@type_label} #{type_name} 的专属照片" %>
<% community_page_title(page_title) %>

<div class="album_container">
	<div class="community_block float_r">
		<a href="/<%= pluralized_picture_type %>/<%= @type_id %>">
			返回<%= @type_label %> <%= type_name %>
			&nbsp;
			<img src="<%= face_img_src(@type_image) %>" border="0" /></a>
	</div>
	
	<h2><%= page_title %></h2>
	
	
	<% unless @account_checked %>
		<p>
			<%= unchecked_alert(@account_checked) %>
		</p>
	<% end %>
	
	
	<div class="community_block_narrow">
		<div class="form_info_l">
			你可以上传 JPG, JPEG, GIF, PNG 或 BMP 格式的图片, 每个文件大小可以到 <b>3 M</b>
		</div>
	</div>
	
	<br />
	
	
	<%= render :partial => "/common/upload", :locals => {:downgrade_link => "/albums/1/upload_simple", :upload_action => "/albums/1/create_photo", :file_size_limit => 3} %>
	
</div>


