<% round_corner_div :border_color => "#F0E0CF", :bg_color => "#FFF5E8", :style => "width: 520px; text-align: right;" do %>
	<div class="action_bar">
		<a href="/activities/coming_day"<%= " class=\"link_selected\"" if action_name == "coming_day" %>>今天的活动</a>
		<a href="/activities/coming_week"<%= " class=\"link_selected\"" if action_name == "coming_week" %>>最近一周</a>
		<a href="/activities/coming_month"<%= " class=\"link_selected\"" if action_name == "coming_month" %>>最近一月</a>
		<a href="/activities/coming_half_year"<%= " class=\"link_selected\"" if action_name == "coming_half_year" %>>最近半年</a>
		<a href="/activities/all"<%= " class=\"link_selected\"" if action_name == "all" %>>全部活动</a>
		<% if action_name == "day" %>
			<a href="/activities/day/<%= date.strftime("%Y%m%d") %>" class="link_selected">
				<%= date.strftime("%Y年%m月%d日") %>
			</a>
		<% end %>
	</div>
<% end %>