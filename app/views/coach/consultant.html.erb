											[
												["职业素质", "时间管理"],
												[nil, "演讲技能"],
												[nil, "拜访技巧"],
												[nil, "商务沟通"],
												[nil, "谈判技巧"],
												[nil, "客户关系管理"]
											]
										]
									%>
									
									<% consulting_contents.each do |content| %>
										<% content_size = content.size %>
										<% content_size.times do |i| %>
											<% content_row = content[i] %>
											<tr>
												<% if content_row[0] %>
												<td style="background-color: #FFE0C1;"<%= %Q! rowspan="#{content_size}"! if i==0 %>>
													<%= content_row[0] %>
												</td>
												<% end %>

												<td style="background-color: #FFEFAB;">
													<%= content_row[1] %>
												</td>
											</tr>
										<% end %>
									<% end %>
								</table>
							</div>

						</div>
					<% end %>
				</div>
				
				<div class="coach_block">
					<% round_corner_div :border_color => "#C0C0C0", :bg_color => "#FFFFFF" do %>
