<% company_name = h(@company.name) %>

<% page_title = "公司 #{company_name} 讨论话题的精华区" %>
<% community_page_title(page_title) %>

<div class="float_r blog_container_r">
	<div class="community_block align_c">
		<a href="/companies/post/<%= @company.id %>">
			全部公司讨论话题</a>
	</div>
	
	<div class="community_block_narrow">
		<%= thin_hr %>
	</div>
	
	<div class="community_block align_c">
		<a href="/company/posts/compose/<%= @company.id %>" style="font-size: 14px;">
			<img src="/images/groups/add_post_small.png" border="0" />
			发起新的讨论话题</a>
	</div>
</div>

<div class="blog_container_l">
	<h2><%= page_title %></h2>
	
	
	<div class="community_block_narrow form_info_s">
		精华区内共有
		<b><%= @company_posts.total_entries + @top_company_posts.size %></b>
		个讨论话题
	</div>
	
	<div class="community_block_narrow">
		<a href="/groups/1" target="_blank" class="form_info_s account_nick_link">
			举报话题内容, 或申请置顶,放入精华区等管理操作, 请到 乔布圈反馈小组</a>
	</div>
	

	<% if @top_company_posts.size > 0 %>
		<div class="community_title">
			精华区置顶的话题 ...
		</div>
	
		<div class="community_block">
			<table cellpadding="0" cellspacing="5" class="main_part_w">
				<thead>
					<tr>
						<td width="52%">话题</td>
						<td width="6%" align="right">评论</td>
						<td width="19%" align="right">发起人</td>
						<td width="23%" align="right">最后参与</td>
					</tr>
				</thead>
				<tbody>
					<%= render :partial => "company_post", :collection => @top_company_posts %>
				</tbody>
			</table>
		</div>
	<% end %>

	<div class="community_title">
		精华区所有话题 ...
	</div>

	<div class="community_block">
		<table cellpadding="0" cellspacing="5" class="main_part_w">
			<thead>
				<tr>
					<td width="52%">话题</td>
					<td width="6%" align="right">评论</td>
					<td width="19%" align="right">发起人</td>
					<td width="23%" align="right">最后参与</td>
				</tr>
			</thead>
			<tbody>
				<%= render :partial => "company_post", :collection => @company_posts %>
			</tbody>
		</table>
	</div>

	<div class="community_block">
		<%= paging_buttons(@company_posts) %>
	</div>
</div>

