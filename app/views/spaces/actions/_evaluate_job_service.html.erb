<table cellpadding="0" cellspacing="0" class="main_part_w">
	<tr>
		<td>
			<div>
				<a href="/spaces/show/<%= operator[2] %>" class="account_nick_link">
					<%= h(operator[0]) %></a>
				点评
				<a href="/job_services/<%= job_service_id %>">
					求职服务</a>
				说:
				&nbsp;
				<% h_evaluation_content = h(evaluation_content) %>
				<span title="<%= h_evaluation_content %>">
					<img src="/images/left_quote.gif" border="0" />
						<%= truncate(h_evaluation_content) %>
					<img src="/images/right_quote.gif" border="0" />
				</span>
			</div>
			
			
			<div style="margin: 5px 15px 0px;">
				<%= rank(evaluation_point, :small => true, :readonly => true) %>
			</div>
		</td>
		
		<% unless save_space %>
			<td style="width: 50px">
				<a href="/spaces/show/<%= operator[2] %>">
					<img src="<%= face_img_src(operator[1]) %>" border="0" /></a>
			</td>
		<% end %>
	</tr>
</table>

