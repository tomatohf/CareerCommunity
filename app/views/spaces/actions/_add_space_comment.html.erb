<table cellpadding="0" cellspacing="5" class="main_part_w">
	<tr>
		<td>
			<a href="/spaces/show/<%= operator[2] %>" class="account_nick_link">
				<%= h(operator[0]) %></a>
			在
			<% if operator[2].to_s == owner_id.to_s %>
				自己
			<% else %>
				<a href="/spaces/show/<%= owner_id %>" class="account_nick_link">
					<%= h(owner_nick) %></a>
			<% end %>
			的
			<a href="/spaces/wall/<%= owner_id %>">留言板</a>
			上留言说:
			&nbsp;
			<% h_comment_content = h(comment_content) %>
			<span title="<%= h_comment_content %>">
				<img src="/images/left_quote.gif" border="0" />
					<%= truncate(h_comment_content) %>
				<img src="/images/right_quote.gif" border="0" />
			</span>
		</td>
		
		<td style="width: 50px">
			<a href="/spaces/show/<%= owner_id %>">
				<img src="<%= face_img_src(owner_pic_url) %>" border="0" /></a>
		</td>
	</tr>
</table>

