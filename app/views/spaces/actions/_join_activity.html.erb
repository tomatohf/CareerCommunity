<table cellpadding="0" cellspacing="0" class="main_part_w">
	<tr>
		<td>
			<a href="/spaces/show/<%= operator[2] %>" class="account_nick_link">
				<%= h(operator[0]) %></a>
			<%= creator_id == operator[2] ? "发起" : "参加" %>
			了活动
			<a href="/activities/<%= activity_id %>"><%= h(activity_title) %></a>
		</td>
		
		<% unless save_space %>
			<td style="width: 50px">
				<a href="/activities/<%= activity_id %>">
					<img src="<%= face_img_src(activity_image) %>" border="0" /></a>
			</td>
		<% end %>
	</tr>
</table>

